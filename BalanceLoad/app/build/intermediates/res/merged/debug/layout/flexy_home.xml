<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_home"
    android:padding="5dp"
    android:weightSum="100"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_horizontal|top"
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:text="CHANGE"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_weight="75"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <FrameLayout
            android:background="@color/colorAccent"
            android:id="@+id/fl_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/fab_margin">
            <ImageView
                android:id="@+id/flash_on_btn"
                android:layout_width="@dimen/toggle_btn_width"
                android:layout_height="@dimen/toggle_btn_height"
                android:src="@mipmap/on_btn"
                android:visibility="visible"></ImageView>
            <ImageView
                android:id="@+id/flash_off_btn"
                android:layout_width="@dimen/toggle_btn_width"
                android:layout_height="@dimen/toggle_btn_height"
                android:src="@mipmap/off_btn"
                android:visibility="invisible"></ImageView>
        </RelativeLayout>


        <Button android:id="@+id/btn_call"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center" android:layout_margin="@dimen/fab_margin"
            android:text="Call" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin">
            <ImageView
                android:id="@+id/camera_on_btn"
                android:layout_width="@dimen/toggle_btn_width"
                android:layout_height="@dimen/toggle_btn_height"
                android:src="@mipmap/on_btn"
                android:visibility="visible"></ImageView>
            <ImageView
                android:id="@+id/camera_off_btn"
                android:layout_width="@dimen/toggle_btn_width"
                android:layout_height="@dimen/toggle_btn_height"
                android:src="@mipmap/off_btn"
                android:visibility="invisible"></ImageView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
